<h1 class="movie-h1" >Ironhack Cinema</h1>
<p class="movie-title-showtime">Click on the movie to check showtimes!</p>
<div class="movies-container">
    	{{#each films}}
		<div class="movies-box">
			<img class="movie-image" src="{{ this.image }}" alt="Movie image">
			<p class="movie-title">{{ this.title }}</p>
			<a href="/moviesDetails">See more</a>
		</div>
    	
    	{{/each}}
</div>    
